<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg border-0" style="background-color: #fefefe;">
        <div class="card-body p-5">
          <h2 class="card-title text-center mb-5" style="font-size: 2.5rem;">アカウント情報編集</h2>

          <%= form_with(model: resource, url: registration_path(resource_name), local: true, method: :patch) do |f| %>
            <% if resource.errors.any? %>
              <div class="alert alert-danger">
                <h4>エラーが発生しました:</h4>
                <ul>
                  <% resource.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <!-- 名前 -->
            <div class="mb-4">
              <%= f.label :name, "名前", class: "form-label", style: "font-size: 1.3rem;" %>
              <%= f.text_field :name, autocomplete: "name", class: "form-control form-control-lg", style: "font-size: 1.2rem;" %>
            </div>

            <!-- メールアドレス -->
            <div class="mb-4">
              <%= f.label :email, "メールアドレス", class: "form-label", style: "font-size: 1.3rem;" %>
              <%= f.email_field :email, autocomplete: "email", class: "form-control form-control-lg", style: "font-size: 1.2rem;" %>
            </div>

            <!-- パスワード（変更しないなら空欄でOK） -->
            <div class="mb-4">
              <%= f.label :password, "新しいパスワード（変更しないなら空欄）", class: "form-label", style: "font-size: 1.3rem;" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg", style: "font-size: 1.2rem;" %>
            </div>

            <!-- パスワード確認 -->
            <div class="mb-4">
              <%= f.label :password_confirmation, "パスワード確認", class: "form-label", style: "font-size: 1.3rem;" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", style: "font-size: 1.2rem;" %>
            </div>

            <!-- 現在のパスワード（必須） -->
            <div class="mb-4">
              <%= f.label :current_password, "現在のパスワード（変更には必須）", class: "form-label", style: "font-size: 1.3rem;" %>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control form-control-lg", style: "font-size: 1.2rem;" %>
            </div>

            <!-- 更新ボタン -->
            <div class="text-center mt-5">
              <%= f.submit "更新する", class: "btn btn-primary btn-lg", style: "font-size: 1.5rem;" %>
            </div>

          <% end %>

          <div class="text-center mt-4">
            <%= link_to "トップに戻る", root_path, class: "btn btn-outline-secondary btn-lg", style: "font-size: 1.3rem;" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
